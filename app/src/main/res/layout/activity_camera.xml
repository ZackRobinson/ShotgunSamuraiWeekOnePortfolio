<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    tools:context="com.example.zack.navigationdrawerandui.CameraActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/capturedImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/captureImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:contentDescription="@string/captured_image" />

        <Button
            android:id="@+id/captureImage"
            android:layout_width="300sp"
            android:layout_height="60sp"
            android:layout_above="@+id/switchView1"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:onClick="dispatchTakePictureIntent"
            android:text="@string/capture_image" />

        <Button
            android:id="@+id/switchView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:onClick="goToEMI"
            android:text="Switch to EMI calculator" />


    </RelativeLayout>


</RelativeLayout>